<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:id="@+id/mainLayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SummaryActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="50dp"
                    android:orientation="vertical"
                    android:id="@+id/performanceCalcLayout"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent">
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:text="PERFORMANCE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textColor="#000000"
                        android:layout_marginTop="20dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:id="@+id/performanceCalcTextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_gravity="center"
                        android:text="   Earned Time               Total Time                Delay Time             Performance"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:text="UOMs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <GridView
                        android:layout_marginTop="20dp"
                        android:id="@+id/gridView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </GridView>
                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:text="PUMP ANALYSIS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="20dp"
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginRight="30dp"
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:layout_marginTop="30dp"
                            android:textSize="20dp"
                            android:text="METHODS USED WELL"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:layout_marginLeft="30dp"
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_marginTop="30dp"
                            android:textSize="20dp"
                            android:text="NEEDS IMPROVEMENT"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <GridView
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:id="@+id/gridView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </GridView>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:textSize="20dp"
                        android:text="COMMENTS/DELAY NOTES"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:id="@+id/delayNotesText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:layout_marginTop="15dp"
                        android:text="This signature signifies that the information in this session was explained and all questions were answered"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:orientation="vertical"
                        android:id="@+id/canvasLL"
                        android:layout_width="match_parent"
                        android:layout_height="200dp">

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_marginLeft="20dp"
                            android:id="@+id/clearBtn"
                            android:text="CLEAR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

